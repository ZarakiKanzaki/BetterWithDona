@{
    Layout = "~/Views/Shared/_LayoutBackend.cshtml";
    ViewBag.Title = "Dashboard";
}


<div class="row">

    <!--This section is fake-->
    <!--Some section about reporting the statistics of the offers-->
    <div class="col-lg-8">
        <div class="row">
            <div class="col-md-6 mt-5 mb-3">
                <div class="card">
                    <div class="seo-fact sbg1">
                        <div class="p-4 d-flex justify-content-between align-items-center">
                            <div class="seofct-icon"><i class="ti-thumb-up"></i> Offers in the last week</div>
                            <h2>2,315</h2>
                        </div>
                        <canvas id="seolinechart1" height="50"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mt-md-5 mb-3">
                <div class="card">
                    <div class="seo-fact sbg2">
                        <div class="p-4 d-flex justify-content-between align-items-center">
                            <div class="seofct-icon"><i class="ti-share"></i> Offers in the last Month</div>
                            <h2>3,984</h2>
                        </div>
                        <canvas id="seolinechart2" height="50"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3 mb-lg-0">
                <div class="card">
                    <div class="seo-fact sbg3">
                        <div class="p-4 d-flex justify-content-between align-items-center">
                            <div class="seofct-icon">This year trend</div>
                            <canvas id="seolinechart3" height="60"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="seo-fact sbg4">
                        <div class="p-4 d-flex justify-content-between align-items-center">
                            <div class="seofct-icon">Whole time trend</div>
                            <canvas id="seolinechart4" height="60"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- seo fact area end -->
    <!-- Social Campain area start -->
    <div class="col-lg-4 mt-5">
        <div class="card">
            <div class="card-body pb-0">
                <h4 class="header-title">Offers statuses</h4>
                <div id="socialads" style="height: 245px;"></div>
            </div>
        </div>
    </div>
    <!-- Social Campain area end -->
    <!-- map area start -->
    <div class="col-xl-5 col-lg-12 mt-5">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Geografical area of the offers</h4>
                <div id="seomap"></div>
            </div>
        </div>
    </div>
    <!-- map area end -->
    <!-- Advertising area start -->
    <div class="col-lg-4 mt-5">
        <div class="card h-full">
            <div class="card-body">
                <h4 class="header-title">Offers by Position Offered </h4>
                <canvas id="seolinechart8" height="150"></canvas>
            </div>
        </div>
    </div>
    <!-- Advertising area end -->
 

</div>

@model IEnumerable< BetterWithDona.Models.LanguageSkills>
<!-- Section -->
<section>
    <header>
        <h2>Hard Skills</h2>
    </header>
    <div class="content">
        <p>Here you can find <strong> a small extract</strong> of my Skills .</p>
        <ul class="feature-icons">
            <!-- HARDCODED Icons Generation -->
            @{
                var icons = new string[] { "fa-laptop", "fa-bolt", "fa-signal", "fa-cog", "fa-map-marker-alt", "fa-code" };
            }
            @for (int i = 0; i < Model.Count(); i++)
            {
                <li class="icon solid @icons[i]">@Model.ElementAt(i).Name</li>

            }
        </ul>
    </div>
</section>
<!-- End Section -->